<?xml version="1.0" encoding="utf-8"?>
<de.dlyt.yanndroid.oneui.layout.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:expandable="true"
    app:expanded="false"
    app:subtitle="@string/home"
    app:title="@string/app_name">

    <de.dlyt.yanndroid.oneui.view.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_location="main_content" />

    <de.dlyt.yanndroid.oneui.widget.TabLayout
        android:id="@+id/main_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_location="footer" />

    <include
        layout="@layout/home_drawer"
        app:layout_location="drawer_panel" />

</de.dlyt.yanndroid.oneui.layout.DrawerLayout>